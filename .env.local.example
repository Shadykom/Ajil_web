# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Verification (server-side)
# Recommended so verification works even when RLS blocks anon reads.
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Optional: configure which table/columns to use for QR verification.
# If not set, the app will try common defaults (e.g., "licenses", "license_verifications").
# VERIFICATION_TABLE=licenses
# VERIFICATION_TOKEN_COLUMN=token
# VERIFICATION_STATUS_COLUMN=status
# VERIFICATION_EXPIRES_AT_COLUMN=expires_at
# VERIFICATION_ACTIVE_COLUMN=is_active
# VERIFICATION_APPROVED_AT_COLUMN=approved_at
# VERIFICATION_ID_COLUMN=id
# VERIFICATION_APPROVED_VALUES=approved,active,valid
# VERIFICATION_REVOKED_VALUES=revoked
# VERIFICATION_SUSPENDED_VALUES=suspended

# Optional: Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id
